{
  "name": "spartan-ai",
  "version": "1.0.0",
  "description": "Spartan AI Security Service - Serverless security monitoring with AWS Lambda and CDK",
  "main": "index.js",
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "scripts": {
    "test": "jest",
    "test:unit": "jest --testPathPattern=unit",
    "test:integration": "jest --testPathPattern=integration",
    "test:coverage": "jest --coverage",
    "test:coverage:inband": "jest --coverage --runInBand",
    "test:watch": "jest --watch",
    "test:load": "artillery run tests/load/artillery.yml",
    "test:load:report": "artillery run --output tests/load/report.json tests/load/artillery.yml && artillery report tests/load/report.json",
    "test:e2e": "TS_NODE_COMPILER_OPTIONS='{\"module\":\"commonjs\",\"esModuleInterop\":true,\"allowImportingTsExtensions\":true}' mocha tests/e2e/**/*.test.ts --require ts-node/register --timeout 30000",
    "audit": "npm audit",
    "audit:fix": "npm audit fix",
    "audit:force": "npm audit --force",
    "audit:production": "npm audit --production",
    "build": "npm run build --workspaces",
    "build:shared": "cd shared && npm run build",
    "build:infrastructure": "cd infrastructure && npm run build",
    "cdk": "cd infrastructure && npm run cdk",
    "cdk:synth": "cd infrastructure && npm run synth",
    "cdk:synth:validate": "cd infrastructure && npm run synth && echo 'CDK synthesis validation passed'",
    "cdk:deploy": "cd infrastructure && npm run deploy",
    "cdk:diff": "cd infrastructure && npm run diff",
    "install:all": "npm install && npm install --workspaces",
    "clean": "rm -rf node_modules */node_modules */*/node_modules",
    "security:check": "npm audit --audit-level=moderate",
    "security:fix": "npm audit fix --force",
    "lint": "eslint . --ext .ts,.js",
    "lint:fix": "eslint . --ext .ts,.js --fix",
    "typecheck": "tsc --noEmit",
    "precommit": "npm run typecheck && npm run lint && npm run security:check"
  },
  "keywords": [
    "aws",
    "lambda",
    "serverless",
    "cdk",
    "security",
    "monitoring",
    "api-gateway",
    "dynamodb"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@aws-sdk/client-api-gateway": "^3.700.0",
    "@aws-sdk/client-cloudwatch": "^3.700.0",
    "@aws-sdk/client-dynamodb": "^3.700.0",
    "@aws-sdk/client-eventbridge": "^3.700.0",
    "@aws-sdk/client-s3": "^3.700.0",
    "@aws-sdk/client-sns": "^3.700.0",
    "@aws-sdk/client-ssm": "^3.700.0",
    "@aws-sdk/lib-dynamodb": "^3.700.0",
    "@sendgrid/mail": "^8.1.3",
    "axios": "^1.7.9",
    "axios-retry": "^4.1.1",
    "firebase-admin": "^13.0.2",
    "source-map-support": "^0.5.21",
    "twilio": "^5.3.5",
    "uuid": "^11.0.3",
    "zod": "^3.24.1"
  },
  "devDependencies": {
    "@types/aws-lambda": "^8.10.145",
    "@types/jest": "^29.5.14",
    "@types/node": "^22.10.5",
    "@types/uuid": "^10.0.0",
    "@typescript-eslint/eslint-plugin": "^8.18.2",
    "@typescript-eslint/parser": "^8.18.2",
    "artillery": "^2.0.0",
    "aws-cdk": "^2.232.2",
    "aws-cdk-lib": "^2.232.2",
    "chai": "^4.4.1",
    "constructs": "^10.4.4",
    "eslint": "^9.17.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-security": "^3.0.1",
    "jest": "^29.7.0",
    "mocha": "^10.7.3",
    "prettier": "^3.4.2",
    "sinon": "^18.0.1",
    "ts-jest": "^29.4.6",
    "ts-node": "^10.9.2",
    "typescript": "^5.7.2"
  },
  "workspaces": [
    "shared",
    "infrastructure",
    "functions/*",
    "tests"
  ],
  "overrides": {
    "@opentelemetry/api": "1.9.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/clintgc/SpartanAI.git"
  },
  "private": true
}
